using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class EnemyMove : MonoBehaviour
{
    [SerializeField] private Rigidbody2D _rigidbody2D;

    private int _random;

    private void Start()
    {
        _random = Random.Range(-1, 1);
        if (_random == 0)
        {
            _random = 1;
        }
    }

    private void Update()
    {
        if (_rigidbody2D.position.y < -10)
        {
            Destroy(gameObject);
        }
        _rigidbody2D.position += new Vector2(Time.deltaTime * _random, 0);
    }
}
